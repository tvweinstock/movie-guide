<h1>Build Your Buff: Add a New Title</h1>

<form action="/movie" method="post">
  <fieldset>

    <label for="Title">Film Title</label>
    <input type="text" name="title">  

    <label for="Year">Year</label>
    <input type="year" name="year">

    <label for="Genre">Genre</label>
    <input type="text" name="genre">
  </fieldset>

  <fieldset>
    <label for="Priority">Viewing Priority</label>
    <input type="radio" name="priority" value="1">  ASAP
    <input type="radio" name="priority" value="2">  Within the week
    <input type="radio" name="priority" value="3">  Within the month
    <input type="radio" name="priority" value="4">  Before the sequel comes out
  </fieldset>


  <input type="submit" name="Submit">


</form>